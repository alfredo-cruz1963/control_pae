<div class="container p-5">
  <div class="row">
    <div class="col-sm-4 offset-md-4">
      <div class="card">
        <div class="card-header text-dark" style="background-color: rgba(232, 240, 254, 0.60)">
          <font size=4>
            <i class="fa fa-address-card text-primary" aria-hidden="true"></i>
            <strong>Digite documento</strong>
          </font>
        </div>
        <div class="card-body">
          <form action="/alumnos/consultar" method="POST">
            <div class="form-group ">
              Documento
              <input type="text" class="form-control" name="numero" placeholder="Documento" title="Recibe solo numeros"
                pattern="^([0-9]){5,10}$" autofocus required>
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-block">
                Consultar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>