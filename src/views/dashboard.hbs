<div class="row">
  <div class="col-12 col-sm-6 col-md-5">
    <div class="card ">
      <div class="card-header" style="background-color: rgba(232, 240, 254, 0.60)">
        <i class="fas fa-chart-bar text-success mr-1"></i><strong>Entregas mensuales</strong>
      </div>
      <div class="card-body">
        {{!-- <canvas id="BarChart" width="100%" height="60"></canvas> --}}
        <canvas id="BarChart" style="min-height: 450px; height: 450px; max-height: 450px; max-width: 100%;">
        </canvas>
      </div>
    </div>
  </div>

  <div class="col-12 col-sm-6 col-md-7">
    <div class="card ">
      <div class="card-header" style="background-color: rgba(232, 240, 254, 0.60)">
        <i class="fa fa-list text-primary mr-1"></i><strong>Entregas por Instituci√≥n Educativa</strong>
      </div>
      <div class="card-body" style="height: 490px;">
        <div class="table-responsive">
          <table id="example1" class="table table-striped table-bordered mt-3" style="width:100%">
            <thead style="background-color: #337ab7">
              <tr style="color: white !important">
                <td style="font-size:80%;"><strong>Cod Sede</strong></td>
                <td style="font-size:80%;"><strong>Nombre Sede</strong></td>
                <td style="font-size:80%;"><strong>Cupo</strong></td>
                <td style="font-size:80%;"><strong>Entregas</strong></td>
              </tr>
            </thead>
            <tbody>
              {{#if entregas }}
              {{#each entregas }}
              <tr>
                <td style="font-size:80%;">{{codsede}}</td>
                <td style="font-size:80%;">{{nombsede}}</td>
                <td style="font-size:80%;">{{cupo}}</td>
                <td style="font-size:80%;">{{total}}</td>
              </tr>
              {{/each }}
              {{/if }}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/chart.js"></script>
<script>
  var bgColor = [];

  for (i = 0; i < 12; i++) {
    var color1 = (Math.floor(Math.random() * (255 - 0) + 0));
    var color2 = (Math.floor(Math.random() * (255 - 0) + 0));
    var color3 = (Math.floor(Math.random() * (255 - 0) + 0));
    bgColor.push("rgba(" + color1.toString() + "," + color2.toString() + "," + color3.toString() + ", 1)");
  }

  // Bar Chart Example

  var ctx = document.getElementById('BarChart').getContext('2d');
  var myLineChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: {{{ meses }}},
    datasets: [{
      label: "Entregas",
      backgroundColor: bgColor,
      data: {{ total }},
          }],
        },
    options: {
      legend: {
        display: false
      }
    }
  });

</script>