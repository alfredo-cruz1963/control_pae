<div class="container p-5">
  <div class="row">
    <div class="col-sm-5 mx-auto">
      <div class="card ">
        <div class="card-header text-dark" style="background-color: rgba(232, 240, 254, 0.60)">
          <font size=4>
            <i class="fa fa-user text-primary" aria-hidden="true"></i>
            <strong>Editar Usuario</strong>
          </font>
        </div>
        <div class="card-body">
          <form action="/users/edit/{{usuarios.id}}" method="POST">
            <div class="form-group">
              Usuario
              <input type="text" class="form-control" name='username' id="username" placeholder="users"
                title="Max 20 caracteres" value="{{usuarios.username}}" pattern="[a-zA-Z0-9áéíóúñŃ#@$&/ ,.'-]{5,20}"
                autofocus disabled>
            </div>

            <div class="form-group">
              Nombre Usuario
              <input type="text" class="form-control" name='fullname' id="fullname" placeholder="Nombre usuario"
                title="Max 50 caracteres" value="{{usuarios.fullname}}" pattern="[a-zA-Z0-9áéíóúñŃ#@$&/ ,.'-]{3,50}"
                required>
            </div>
            <div class="form-group">
              Celular
              <input type="text" class="form-control" name="cel" placeholder="Celular" title="Recibe solo numeros"
                pattern="^([0-9]){10,10}$" value="{{usuarios.cel}}">
            </div>
            <div class="form-group">
              Email
              <input type="email" class="form-control" name='email' id="email" placeholder="Email"
                pattern="^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" required
                value="{{usuarios.email}}">
            </div>
            {{#if (ne user.rol 'Administrador')}}
            <div class="form-group">
              Sede
              <select class="custom-select" name="codsede" id="codsede">
                <option selected value="{{usuarios.codsede}}">{{usuarios.nombsede}}</option>
                {{#each sedes }}
                <option value="{{codsede}}">{{nombsede}}</option>
                {{/each }}
              </select>
            </div>
            {{/if}}
            <div class="form-group">
              Roles
              <select class="custom-select" name="rol" id="rol" required>
                <option selected>{{usuarios.rol}}</option>
                <option>Usuario</option>
                <option>Invitado</option>
                <option>Administrador</option>
              </select>
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-block ">Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>