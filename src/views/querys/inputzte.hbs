<div class="container p-3">
  <div class="row">
    <div class="col-sm-5 mx-auto">
      <div class="card">
        <div class="card-header text-dark" style="background-color: rgba(232, 240, 254, 0.60)">
          <font size=4>
            <i class="fas fa-file-pdf text-primary" aria-hidden="true"></i>
            <strong>Talla para la Edad</strong>
          </font>
        </div>
        <div class="card-body">
          <form action="/querys/listzte" method="POST">
            <div class="form-group">
              <strong>Punto de Corte</strong>
              <div class="card card-primary">
                <div class="card-body">
                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="corte1" name="corte" value="1" required class="custom-control-input">
                        <label class="custom-control-label" for="corte1">0 - 5 Años</label>
                      </div>
                      <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="corte2" name="corte" value="2" checked class="custom-control-input">
                        <label class="custom-control-label" for="corte2">5 - 17 Años</label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <strong>Población</strong>
              <div class="card card-primary">
                <div class="card-body">
                  <div class="form-group">
                    <div>
                      <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="tipo1" name="sexo" value="1" required class="custom-control-input">
                        <label class="custom-control-label" for="tipo1">Niños</label>
                      </div>
                      <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="tipo2" name="sexo" value="2" required class="custom-control-input">
                        <label class="custom-control-label" for="tipo2">Niñas</label>
                      </div>
                      <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="tipo3" name="sexo" value="3" checked required
                          class="custom-control-input">
                        <label class="custom-control-label" for="tipo3">Ambos</label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <strong>Rango de Fechas</strong>
              <div class="card card-primary">
                <div class="card-body">
                  <div class="form-group row">
                    <label for="fvisita" class="col-sm-3 col-form-label text-right">Inicio</label>
                    <div class="col-sm-9">
                      <input type="date" class="form-control" name="desde" id="desde" value="{{fechoy}}"
                        max="{{fechoy}}" autofocus required>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="fvisita" class="col-sm-3 col-form-label text-right">Final</label>
                    <div class="col-sm-9">
                      <input type="date" class="form-control" name="hasta" id="hasta" value="{{fechoy}}"
                        max="{{fechoy}}" required>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <button class="btn btn-primary btn-block">
                Enviar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>