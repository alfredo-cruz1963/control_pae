<div class="container p-3">
  <div class="row">
    <div class="col-sm-4 mx-auto">
      <div class="card">
        <div class="card-header text-dark" style="background-color: rgba(232, 240, 254, 0.60)">
          <font size=4>
            <i class="fa fa-calendar text-primary" aria-hidden="true"></i>
            <i class="fa fa-university text-primary" aria-hidden="true"></i>
            <strong>Rango de fecha del reporte</strong>
          </font>
        </div>
        <div class="card-body">
          <form action="/querys/listfecsede" method="POST">
            <div class="form-group">
              <div class="card card-primary">
                <div class="card-body">
                  <div class="form-group row">
                    <label for="fvisita" class="col-sm-3 col-form-label text-right">Inicio</label>
                    <div class="col-sm-9">
                      <input type="date" class="form-control" name="desde" id="desde" value="{{fechoy}}"
                        max="{{fechoy}}" autofocus required>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="fvisita" class="col-sm-3 col-form-label text-right">Final</label>
                    <div class="col-sm-9">
                      <input type="date" class="form-control" name="hasta" id="hasta" value="{{fechoy}}"
                        max="{{fechoy}}" required>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              Institucion Educativa
              <select class="custom-select" name="codsede" id="codsede" required>
                <option selected value="">Seleccione Sede</option>
                {{#each sedes }}
                <option value="{{codsede}}">{{nombsede}}</option>
                {{/each }}
              </select>
            </div>

            <div class="form-group">
              <button class="btn btn-primary btn-block">
                Enviar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>