<div class="container p-5">
  <div class="row">
    <div class="col-sm-4 mx-auto">
      <div class="card ">
        <div class="card-header text-dark" style="background-color: rgba(232, 240, 254, 0.60)">
          <font size=4>
            <i class="fa fa-key text-primary" aria-hidden="true"></i>
            <strong>Cambiar password</strong>
          </font>
        </div>
        <div class="card-body">
          <form action="/change/{{user.id}}" method="POST">
            <div class="form-group">
              Password actual
              <div class="input-group ">
                <input type="password" class="form-control" name="oldpass" id='oldpass' placeholder="Password Actual"
                  value="{{user.password}}" readonly>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              Nuevo Password
              <div class="input-group ">
                <input type="password" class="form-control" name="newpass" id='newpass' id="passnew"
                  placeholder="Nuevo Password" title="minimo 8 caracteres" pattern="[A-Za-z0-9!?-]{8,12}" required>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              Repita Password
              <div class="input-group ">
                <input type="password" class="form-control" name="repepass" id='repepass' placeholder="Repita Password"
                  title="minimo 8 caracteres" pattern="[A-Za-z0-9!?-]{8,12}" required>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-block ">Cambiar Password</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>