<div class="container">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <div class="card-header" style="background-color: #fff">
        <h6>Entregas al Alumno</h6>
      </div>
    </div>

    <div class="col-md-7 mx-auto">
      <div class="card ">
        <div class="card-body">
          <div class="table-responsive">
            <table id="tab-entregas" class="table table-bordered" style="width:100%" cellspacing="0">
              <thead class="text-white" style="background-color: #165a96">
                <tr>
                  <td style="font-size:80%;"><strong>Fecha</strong></td>
                  <td style="font-size:80%;"><strong>Acudiente</strong></td>
                  <td style="font-size:80%;"><strong>Cedula</strong></td>
                  <td style="font-size:80%;"><strong># Entrega</strong></td>
                </tr>
              </thead>
              <tbody>
                {{#if datos }}
                {{#each datos }}
                <tr>
                  <td style="font-size:80%;">{{mfecha}}</td>
                  <td style="font-size:80%;">{{acudiente}}</td>
                  <td style="font-size:80%;">{{cedula}}</td>
                  <td style="font-size:80%;">{{identrega}}</td>
                </tr>
                {{/each }}
                {{/if }}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>