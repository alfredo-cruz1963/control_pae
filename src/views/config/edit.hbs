<div class="container p-3">
  <div class="row">
    <div class="col-sm-3 mx-auto">
      <div class="card">
        <div class="card-header text-dark" style="background-color: rgba(232, 240, 254, 0.60)">
          <font size=3>
            <i class="fa fa-list text-primary" aria-hidden="true"></i>
            <strong>Edita número de entrega</strong>
          </font>
        </div>
        <div class="card-body">
          <form action="/config/update/{{datos.id}}>" method="POST">
            <div class="form-group">
              Fecha Inicio
              <input type="date" name="fecha" value="{{datos.mfecha}}" placeholder="Fecha" class="form-control">
            </div>
            <div class="form-group">
              Entrega número
              <input type="number" name="id_ent" value="{{datos.id_ent}}" placeholder="Id entrega" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary btn-block">
              Actualizar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>